<%- include('partials/header') %> <!-- Include header partial -->
<div class="container mt-4">
  <h1 class="text-center"><%= assignment._id ? 'Edit' : 'Add' %> Assignment</h1> <!-- Dynamic title based on form action -->

  <form action="<%= action %>" method="POST">
    <!-- Title input -->
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" class="form-control" value="<%= assignment.title || '' %>" required>
    </div>

    <!-- Description input -->
    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" class="form-control"><%= assignment.description || '' %></textarea>
    </div>

    <!-- Deadline input -->
    <div class="form-group">
      <label for="deadline">Deadline</label>
      <input type="date" id="deadline" name="deadline" class="form-control" value="<%= assignment.deadline ? assignment.deadline.toISOString().split('T')[0] : '' %>" required>
    </div>

    <!-- Status dropdown -->
    <div class="form-group">
      <label for="status">Status</label>
      <select id="status" name="status" class="form-control">
        <option value="Pending" <%= assignment.status === 'Pending' ? 'selected' : '' %>>Pending</option>
        <option value="Completed" <%= assignment.status === 'Completed' ? 'selected' : '' %>>Completed</option>
      </select>
    </div>

    <!-- Form buttons -->
    <button type="submit" class="btn btn-success mt-3">Save</button>
    <a href="/" class="btn btn-secondary mt-3">Cancel</a>
  </form>
</div>
<%- include('partials/footer') %> <!-- Include footer partial -->
